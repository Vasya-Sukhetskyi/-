#include <stdio.h>

int main() {
    int t1, t2, t3;
    printf("Введіть три значення: ");
//У цьому коді ми спочатку використовуємо printf() для виведення повідомлення користувачеві, щоб він ввів три значення

    scanf("%d %d %d", &t1, &t2, &t3);
//За допомогою scanf() отримуємо вхідні дані t1, t2 і t3.

    double total_time = (double)(t1 + t2 + t3) / 3;
//Після цього обчислюємо загальний час t1 + t2 + t3, і зберігаємо результат в змінну total_time, приведену до типу double для точного ділення.

    printf("Час необхідний для з’їдання пирога %.2f годин\n", total_time);
//В останньому кроці ми використовуємо printf() зі специфікатором формату %.2f, щоб вивести результат з округленням до 2 знаків після коми.

    return 0;
}
