#include <stdio.h>

int minSteps(int x, int y) {
    // Ініціалізуємо кількість кроків як 0
    int steps = 0;
    
    // Поки x не дорівнює y
    while (x != y) {
        // Якщо x є непарним числом, можемо зробити крок вперед
        if (x % 2 != 0) {
            x++;
        }
        // Якщо x є парним числом і y більше за x, можемо зробити крок вперед
        else if (y > x) {
            x++;
        }
        // Якщо x є парним числом і y менше або рівне x, можемо зробити крок назад
        else {
            x--;
        }
        
        // Збільшуємо кількість кроків
        steps++;
    }
    
    return steps;
}

int main() {
    int x, y;
    
    // Зчитуємо вхідні дані
    printf("Введіть значення x: ");
    scanf("%d", &x);
    
    printf("Введіть значення y: ");
    scanf("%d", &y);
    
    // Обчислюємо мінімальну кількість кроків
    int result = minSteps(x, y);
    
    // Виводимо результат
    printf("Мінімальна кількість кроків: %d\n", result);
    
    return 0;
}
